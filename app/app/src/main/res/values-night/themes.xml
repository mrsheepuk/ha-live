<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Dark Mode -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color (Lighter Teal for dark backgrounds) -->
        <item name="colorPrimary">@color/teal_primary_night</item>
        <item name="colorPrimaryVariant">@color/teal_primary_dark_night</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color (Soft Cyan glow) -->
        <item name="colorSecondary">@color/cyan_secondary_night</item>
        <item name="colorSecondaryVariant">@color/cyan_secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Accent color (Warm Orange glow) - used for FABs and key actions -->
        <item name="colorAccent">@color/orange_accent_night</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>

        <!-- Error colors -->
        <item name="colorError">@color/error_dark</item>
        <item name="colorOnError">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>