<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Light Mode -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color (Teal) -->
        <item name="colorPrimary">@color/teal_primary</item>
        <item name="colorPrimaryVariant">@color/teal_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color (Cyan) -->
        <item name="colorSecondary">@color/cyan_secondary</item>
        <item name="colorSecondaryVariant">@color/cyan_secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Accent color (Warm Orange) - used for FABs and key actions -->
        <item name="colorAccent">@color/orange_accent</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>