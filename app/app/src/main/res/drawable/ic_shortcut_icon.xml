<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient (same as launcher icon) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:endColor="#0097A7"
                android:startColor="#00BCD4"
                android:type="linear" />
        </shape>
    </item>

    <!-- Microphone icon centered -->
    <item
        android:width="48dp"
        android:height="48dp"
        android:gravity="center">
        <vector
            android:width="48dp"
            android:height="48dp"
            android:viewportWidth="48"
            android:viewportHeight="48">

            <!-- Microphone stand icon -->
            <group
                android:translateX="24"
                android:translateY="24">

                <!-- Mic capsule -->
                <path
                    android:fillColor="#FFFFFF"
                    android:pathData="M-6,-14 Q-10,-14 -10,-10 L-10,0 Q-10,4 -6,4 L6,4 Q10,4 10,0 L10,-10 Q10,-14 6,-14 Z" />

                <!-- Mic stand arc -->
                <path
                    android:fillColor="@android:color/transparent"
                    android:pathData="M-12,3 Q-12,12 0,12 Q12,12 12,3"
                    android:strokeColor="#FFFFFF"
                    android:strokeWidth="3" />

                <!-- Mic stand pole -->
                <path
                    android:fillColor="#FFFFFF"
                    android:pathData="M-2,12 L-2,19 L2,19 L2,12 Z" />

                <!-- Mic base -->
                <path
                    android:fillColor="#FFFFFF"
                    android:pathData="M-7,19 L-7,22 L7,22 L7,19 Z" />
            </group>
        </vector>
    </item>
</layer-list>
