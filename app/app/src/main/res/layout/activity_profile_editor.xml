<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <!-- Profile Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profileNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/profile_editor_name_hint"
            app:errorEnabled="true"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profileNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionNext" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Model Selection -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/modelLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/profile_editor_model_label"
            android:layout_marginBottom="16dp">

            <AutoCompleteTextView
                android:id="@+id/modelInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:editable="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Voice Selection -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/voiceLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/profile_editor_voice_label"
            android:layout_marginBottom="16dp">

            <AutoCompleteTextView
                android:id="@+id/voiceInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:editable="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Include Live Context Checkbox -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/includeLiveContextCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_editor_include_live_context"
            android:checked="true"
            android:layout_marginBottom="16dp" />

        <!-- Auto-start Chat Checkbox -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/autoStartChatCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_editor_auto_start_chat"
            android:checked="false"
            android:layout_marginBottom="16dp" />

        <!-- System Prompt Expansion Panel -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/systemPromptCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:strokeWidth="1dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- System Prompt Header -->
                <LinearLayout
                    android:id="@+id/systemPromptHeader"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/profile_editor_system_prompt_title"
                        android:textColor="?attr/colorOnSurface" />

                    <ImageView
                        android:id="@+id/systemPromptExpandIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more"
                        android:contentDescription="@string/expand_collapse_system_prompt" />

                </LinearLayout>

                <!-- System Prompt Content -->
                <LinearLayout
                    android:id="@+id/systemPromptContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="visible">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/systemPromptLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/systemPromptInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="200dp"
                            android:gravity="top|start"
                            android:inputType="textMultiLine|textCapSentences"
                            android:scrollbars="vertical"
                            android:fontFamily="monospace" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Personality Expansion Panel -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/personalityCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:strokeWidth="1dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Personality Header -->
                <LinearLayout
                    android:id="@+id/personalityHeader"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/profile_editor_personality_title"
                        android:textColor="?attr/colorOnSurface" />

                    <ImageView
                        android:id="@+id/personalityExpandIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more"
                        android:contentDescription="@string/expand_collapse_personality" />

                </LinearLayout>

                <!-- Personality Content -->
                <LinearLayout
                    android:id="@+id/personalityContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/personalityLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/personalityInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="200dp"
                            android:gravity="top|start"
                            android:inputType="textMultiLine|textCapSentences"
                            android:scrollbars="vertical"
                            android:fontFamily="monospace" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Background Info Expansion Panel -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/backgroundInfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:strokeWidth="1dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Background Info Header -->
                <LinearLayout
                    android:id="@+id/backgroundInfoHeader"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/profile_editor_background_info_title"
                        android:textColor="?attr/colorOnSurface" />

                    <ImageView
                        android:id="@+id/backgroundInfoExpandIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more"
                        android:contentDescription="@string/expand_collapse_background_info" />

                </LinearLayout>

                <!-- Background Info Content -->
                <LinearLayout
                    android:id="@+id/backgroundInfoContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/backgroundInfoLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/backgroundInfoInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="200dp"
                            android:gravity="top|start"
                            android:inputType="textMultiLine|textCapSentences"
                            android:scrollbars="vertical"
                            android:fontFamily="monospace" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Initial Message Expansion Panel -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/initialMessageCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:strokeWidth="1dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Initial Message Header -->
                <LinearLayout
                    android:id="@+id/initialMessageHeader"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/profile_editor_initial_message_title"
                        android:textColor="?attr/colorOnSurface" />

                    <ImageView
                        android:id="@+id/initialMessageExpandIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more"
                        android:contentDescription="@string/expand_collapse_initial_message" />

                </LinearLayout>

                <!-- Initial Message Content -->
                <LinearLayout
                    android:id="@+id/initialMessageContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/initialMessageLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/initialMessageInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="150dp"
                            android:gravity="top|start"
                            android:inputType="textMultiLine|textCapSentences"
                            android:scrollbars="vertical"
                            android:fontFamily="monospace" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Tool Filtering Section -->
        <TextView
            android:id="@+id/toolFilteringLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Tools"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/toolFilterModeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioAllTools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All Tools"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioSelectedTools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selected Tools Only" />
        </RadioGroup>

        <!-- Tool Selection Container (visible when Selected is chosen) -->
        <LinearLayout
            android:id="@+id/toolSelectionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/toolCacheWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚠️ Tool list may be outdated (not connected to Home Assistant)"
                android:textColor="@color/error"
                android:padding="8dp"
                android:background="@color/error_container"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/toolSearchLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search tools"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/toolSearchBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:imeOptions="actionDone" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/toolCountLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 tools selected"
                android:textAppearance="?attr/textAppearanceCaption"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/toolsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/surface_variant_light"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/cancelButton"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_editor_cancel"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_editor_save"
                app:backgroundTint="?attr/colorAccent" />

        </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
