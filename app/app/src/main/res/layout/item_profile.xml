<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Radio button indicator for active profile -->
            <ImageView
                android:id="@+id/activeRadioButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_radio_checked"
                android:contentDescription="@string/active_profile_indicator"
                android:visibility="gone"
                android:tint="?attr/colorPrimary" />

            <TextView
                android:id="@+id/profileNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profile Name"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <!-- Active Badge -->
            <TextView
                android:id="@+id/defaultBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_active_badge"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/active_profile_accent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- System Prompt Preview -->
        <TextView
            android:id="@+id/promptPreviewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="System prompt preview..."
            android:textSize="14sp"
            android:textColor="@color/text_secondary_light"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="12dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_edit"
                android:textSize="12sp"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/duplicateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_duplicate"
                android:textSize="12sp"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/exportButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_export"
                android:textSize="12sp"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_delete"
                android:textSize="12sp"
                style="?attr/materialButtonOutlinedStyle" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
