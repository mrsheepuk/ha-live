<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/toolCallCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="48dp"
        app:cardBackgroundColor="@color/surface_light"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/tool_call_border"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Left accent bar -->
            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/tool_call_accent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header row with tool icon, name, status, and chevron -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <!-- Tool icon -->
                    <TextView
                        android:id="@+id/toolIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:text="\u2699"
                        android:textColor="@color/tool_call_accent"
                        android:textSize="14sp" />

                    <!-- Tool name -->
                    <TextView
                        android:id="@+id/toolNameText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:textColor="@color/text_primary_light"
                        tools:text="HassLightSet" />

                    <!-- Status icon -->
                    <TextView
                        android:id="@+id/statusIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="\u2713"
                        android:textColor="@color/tool_call_success"
                        android:textSize="14sp" />

                    <!-- Expand/collapse chevron -->
                    <TextView
                        android:id="@+id/expandIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="\u25BC"
                        android:textColor="@color/text_secondary_light"
                        android:textSize="10sp" />

                </LinearLayout>

                <!-- Expandable details section -->
                <LinearLayout
                    android:id="@+id/detailsSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/divider_light" />

                    <!-- Tool name label -->
                    <TextView
                        android:id="@+id/actualToolNameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tool:"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                        android:textColor="@color/text_secondary_light" />

                    <!-- Actual tool name -->
                    <TextView
                        android:id="@+id/actualToolNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="monospace"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                        android:textColor="@color/text_primary_light"
                        tools:text="HassLightSet" />

                    <!-- Parameters label -->
                    <TextView
                        android:id="@+id/parametersLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parameters:"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                        android:textColor="@color/text_secondary_light" />

                    <!-- Parameters content -->
                    <TextView
                        android:id="@+id/parametersText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="monospace"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                        android:textColor="@color/text_primary_light"
                        tools:text="{entity_id: light.living_room}" />

                    <!-- Result label -->
                    <TextView
                        android:id="@+id/resultLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Result:"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                        android:textColor="@color/text_secondary_light" />

                    <!-- Result content -->
                    <TextView
                        android:id="@+id/resultText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="monospace"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                        android:textColor="@color/text_primary_light"
                        tools:text="Success" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
