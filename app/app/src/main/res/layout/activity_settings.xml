<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

<!-- Home Assistant Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Assistant"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="URL:"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/haUrlText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="http://192.168.1.1:8123"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Authentication:"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/haAuthMethodText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not authenticated"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/haEditButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Edit"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/haTestButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Test Connection"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_light"
                android:layout_marginBottom="16dp" />

            <!-- Gemini Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gemini API"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="API Key:"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/geminiApiKeyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not configured"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <!-- API Key Source Section -->
            <TextView
                android:id="@+id/apiKeySourceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source:"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/apiKeySourceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Using local key"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- Shared Key Section (visible when shared key available) -->
            <LinearLayout
                android:id="@+id/sharedKeySection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="12dp">

                <RadioGroup
                    android:id="@+id/keySourceRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/sharedKeyRadio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Use shared key (from Home Assistant)"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/localKeyRadio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Use local key (this device only)" />
                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/manageSharedKeyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Shared Key"
                android:visibility="gone"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get your API key from: https://aistudio.google.com/apikey"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/geminiEditButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Edit"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/geminiClearButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Clear"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Conversation Service Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active Service:"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/conversationServiceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gemini Direct API"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/switchServiceButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Switch to Gemini Direct"
                android:visibility="gone"
                android:layout_marginBottom="24dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_light"
                android:layout_marginBottom="16dp" />

            <!-- Wake Word Detection Section (Container for conditional visibility) -->
            <LinearLayout
                android:id="@+id/wakeWordSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wake Word Detection"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/wakeWordStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disabled"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configuration:"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/wakeWordDetailsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Threshold: 0.50 | Threads: 1 | Sequential | Basic"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/wakeWordConfigButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Configure Wake Word"
                    android:layout_marginBottom="24dp" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_light"
                android:layout_marginBottom="16dp" />

            <!-- Camera Settings Section -->
            <LinearLayout
                android:id="@+id/cameraSettingsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camera Settings"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resolution:"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <Spinner
                    android:id="@+id/cameraResolutionSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frame Rate:"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/cameraFrameRateSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lower resolution and frame rate use less bandwidth. Changes apply to next camera session."
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginBottom="24dp" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_light"
                android:layout_marginBottom="16dp" />

            <!-- Quick Messages Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Messages"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/quickMessagesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/addQuickMessageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Quick Message"
                android:layout_marginBottom="24dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_light"
                android:layout_marginBottom="16dp" />

            <!-- Sync & Cache Section (only visible when integration is installed) -->
            <LinearLayout
                android:id="@+id/syncCacheSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sync &amp; Cache"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Synced:"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lastSyncText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Never"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/forceSyncButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sync Now"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/clearCacheButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Clear Cache"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/syncProgressBar"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_light"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Debug Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debug"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View crash logs to debug issues when logcat is not available"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/viewCrashLogsButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="View Crash Logs"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/shareCrashLogsButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Share Logs"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Read-only overlay -->
    <FrameLayout
        android:id="@+id/readOnlyOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_background"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/readOnlyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Stop chat to modify settings"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@color/overlay_message_bg"
            android:padding="16dp" />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
